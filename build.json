"build": {
  "appId": "com.yourname.limbo",
  "productName": "Limbo",
  "directories": {
    "buildResources": "assets",
    "output": "dist"
  },
  "files": [
    "**/*"
  ],
  "win": {
    "target": [
      "nsis"
    ]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowElevation": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}
